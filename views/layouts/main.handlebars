      <!-- Modal -->
    <div id="note-modal" class="modal fade" role="dialog" data-id="temp" note-id="temp">
        <div class="modal-dialog modal-notify modal-success success">
            <div class="modal-content" id="mod-content">
                <div class="modal-header" id="mod-header">
                    <h2 class="modal-title"><strong>Add a Note</strong></h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" id="mod-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12" id="modality">
                                <span class="caption">Title:</span><br>
                                <input type="text" id="noteTitle" placeholder="Add a Title" class="title-area"><br><br>
                                <span class="caption">Note:</span><br>
                                <textarea type="text" id="note" placeholder="Add your Note" class="text-area"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="noteSubmit" data-dismiss="modal" class="btn btn-primary">Add Note</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

